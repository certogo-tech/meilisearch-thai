# Development Environment Configuration Template
# Copy this file to .env and customize for your local development setup

# API Configuration
API_HOST=localhost
API_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG

# MeiliSearch Configuration
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=your_development_api_key_here

# Thai Tokenizer Configuration
TOKENIZER_ENGINE=pythainlp
TOKENIZER_MODEL=attacut
ENABLE_MIXED_LANGUAGE=true

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# Development Tools
ENABLE_PROFILING=true
ENABLE_DEBUG_ENDPOINTS=true